# navig windows
alt + ctrl - b : yabai -m window --focus west
alt + ctrl - n : yabai -m window --focus south
alt + ctrl - p : yabai -m window --focus north
alt + ctrl - f : yabai -m window --focus east

# shift window
alt + shift - b : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
alt + shift - n : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
alt + shift - p : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
alt + shift - f : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# resize windows
alt + shift + ctrl - b : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
alt + shift + ctrl - n : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
alt + shift + ctrl - p : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
alt + shift + ctrl - f : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0

# navigation spaces
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4

# Move focus container to workspace
alt + ctrl - 1 : yabai -m window --space 1
alt + ctrl - 2 : yabai -m window --space 2
alt + ctrl - 3 : yabai -m window --space 3
alt + ctrl - 4 : yabai -m window --space 4

# close focused window
alt + ctrl - w : yabai -m window --close





# mirror tree y-axis
alt + ctrl - y : yabai -m space --mirror y-axis

# mirror tree x-axis
alt + ctrl - x : yabai -m space --mirror x-axis



# balance size of windows
ctrl + alt - 0 : yabai -m space --balance

# enter fullscreen mode for the focused container
# must be changed because shell in emacs alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

